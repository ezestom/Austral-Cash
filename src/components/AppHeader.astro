---
import logo from "../img/white_logo_only.png";
import Container from "./Container.astro";
const links = [
	{
		to: "/#price",
		label: "Cotizaciones",
	},
	{
		to: "/#steps",
		label: "Solo en 4 pasos",
	},

	{
		to: "/#whyAsutralCash",
		label: "¿Por qué Austral Cash?",
	},
	{
		to: "/#us",
		label: "Nosotros",
	},
];
---

<script>
	let isToggled = false;
	const navlinks = document.querySelector("#navlinks");
	const hamburger = document.querySelector("#hamburger");
	const layer = document.querySelector("#navLayer");
	const ulElement = navlinks?.querySelector("ul");
	const links = ulElement ? [...ulElement.children] : [];
	const btnStart = document.querySelector("#toggle_nav");

	function toggleNavlinks() {
		if (isToggled) {
			navlinks?.classList.add(
				"!visible",
				"!scale-100",
				"!opacity-100",
				"!lg:translate-y-0"
			);
			hamburger?.classList.add("toggled");
			layer?.classList.add("origin-top", "scale-y-100");
		} else {
			navlinks?.classList.remove(
				"!visible",
				"!scale-100",
				"!opacity-100",
				"!lg:translate-y-0"
			);
			hamburger?.classList.remove("toggled");
			layer?.classList.remove("origin-top", "scale-y-100");
		}
	}
	hamburger?.addEventListener("click", () => {
		isToggled = !isToggled;
		toggleNavlinks();
	});

	btnStart?.addEventListener("click", () => {
		isToggled = !isToggled;
		toggleNavlinks();
	});

	links.forEach((link) => {
		link.addEventListener("click", () => {
			isToggled = !isToggled;
			toggleNavlinks();
		});
	});
</script>

<header class="absolute top-0 left-0" id="header">
	<nav class="fixed z-50 w-full">
		<Container>
			<div
				id="navbar"
				class="relative flex flex-wrap items-center justify-between gap-6 py-3">
				<div
					class="relative z-20 flex w-full justify-between md:px-0 lg:w-max logo opacity-20 grayscale">
					<a
						href="/#top"
						aria-label="logo"
						class="flex items-center space-x-2">
						<!-- logo with css -->

						<!-- <div aria-hidden="true" class="flex space-x-1">
                            <div class="h-4 w-4 rounded-full bg-gray-900 dark:bg-white"></div>
                            <div class="h-6 w-2 bg-primary"></div>
                        </div> -->
						<img
							src={logo.src}
							alt="Logo Austral Cash"
							class="max-w-[50px]"
						/>
						<!-- <span class="text-2xl py-2 font-bold text-white dark:text-white"
              >Cacta</span
            > -->
					</a>

					<div class="relative flex max-h-10 items-center lg:hidden">
						<button
							aria-label="humburger"
							id="hamburger"
							class="relative -mr-6 p-6">
							<div
								aria-hidden="true"
								id="line"
								class="m-auto h-0.5 w-5 rounded transition duration-300 bg-gray-200">
							</div>
							<div
								aria-hidden="true"
								id="line2"
								class="m-auto mt-2 h-0.5 w-5 rounded transition duration-300 bg-gray-200">
							</div>
						</button>
					</div>
				</div>
				<div
					id="navLayer"
					aria-hidden="true"
					class="fixed inset-0 z-10 h-screen w-screen origin-bottom scale-y-0 bg-[#13151a] backdrop-blur-2xl transition duration-500 lg:hidden">
				</div>
				<div
					id="navlinks"
					class="invisible absolute top-full left-0 z-20 w-full origin-top-right translate-y-1 scale-90 flex-col justify-end gap-6 rounded-3xl border border-gray-800 bg-transparent p-8 opacity-0 shadow-2xl shadow-gray-600/10 transition-all duration-300 flex-wrap lg:visible lg:relative lg:flex lg:w-fit lg:translate-y-0 lg:scale-100 lg:flex-row lg:items-center lg:gap-0 lg:border-none lg:p-0 lg:opacity-100 lg:shadow-none">
					<div class="w-full lg:w-auto lg:pr-4 lg:pt-0">
						<ul
							class="flex flex-col gap-6 tracking-wide lg:flex-row lg:gap-0 lg:text-md z-20">
							{
								links.map((link) => (
									<li>
										<a
											href={link.to}
											class=" text-gray-300 lg:text-white dark:text-white block transition text-md font-semibold  md:px-4 tracking-tighter 	"
											id="nav-link">
											<span>{link.label}</span>
										</a>
									</li>
								))
							}
						</ul>
					</div>
				</div>
			</div>
		</Container>
	</nav>

	<style>
		.logo {
			border-radius: 1.5rem;
		}
		.logo img {
			margin: 0.25rem;
		}
		#nav-link:hover,
		:focus {
			color: #ffffff;
			text-shadow:
				0 0 5px #ffffff,
				0 0 10px #ffffff,
				0 0 20px #ffffff;
		}
		#navlinks,
		.logo {
			animation: enhance-header linear both;
			animation-timeline: scroll(root);
			animation-range: 0 250px;
		}
		@media (width > 700px) {
			@keyframes enhance-header {
				to {
					height: 75px;
					opacity: 1;
					padding: 1rem;
					position: relative;
					display: flex;
					align-items: center;
					justify-content: center;
					overflow: hidden;
					border-radius: .75rem;
					border: 1px solid #4b5563;
					background-image: linear-gradient(to right, black, #13151a);
					box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25); /* Equivalente a shadow-2xl */
					z-index: 50;
				}
			}
		}
		#toggle_nav:checked ~ div #hamburger #line {
			@apply translate-y-1.5 rotate-45;
		}

		#toggle_nav:checked ~ div #hamburger #line2 {
			@apply -translate-y-1 -rotate-45;
		}

		.toggled div:first-child {
			@apply translate-y-1.5 rotate-45;
		}
		.toggled div:last-child {
			@apply -translate-y-1 -rotate-45;
		}
		@media (width < 700px) {
			@keyframes enhance-nav {
				to {
					backdrop-filter: blur(20px);
					background: linear-gradient(
						90deg,
						rgba(0, 0, 0, 0.4),
						rgba(0, 0, 0, 0.2)
					);
					z-index: 80;
				}
			}
			nav {
				animation: enhance-nav linear both;
				animation-timeline: scroll(root);
				animation-range: 0 50px;
			}
		}
	</style>
</header>
