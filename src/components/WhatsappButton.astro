---
import whatsapp from "../icons/whatsappColor.svg";
---

<a
	id="toggle_nav"
	class="fixed max-w-16 right-5 bottom-5 z-50 hover:scale-105 transition"
	target="_blank"
	href="https://wa.me/+5492944625908"
	href="/#contact">
	<img src={whatsapp.src} alt="whatsapp logo" />
</a>

<style>
	/* #toggle_nav {
		-webkit-box-reflect: below 0px
			linear-gradient(to bottom, transparent, rgba(0, 0, 0, 0.08));
	} */
	#btn-whatsapp:hover > span {
		text-shadow:
			0 0 5px #ffffff,
			0 0 10px #ffffff,
			0 0 20px #ffffff;
	}
	#btn-whatsapp {
		animation: radius linear both;
		animation-timeline: scroll(root);
		animation-range: 0 100px;
	}

	#toggle_nav {
		animation: drop linear both;
		animation-timeline: scroll(root);
		animation-range: 0 100px;
	}
	@media (width > 700px) {
		@keyframes drop {
			to {
				filter: drop-shadow(0 0 3rem white);
			}
		}
	}
</style>
