---
import Container from "../Container.astro";
import DolarComponent from "../DolarComponent/DolarComponent.jsx";
import Fader from "../Fader.astro";
import wise from "../../icons/banks/wise.webp";
import uala from "../../icons/banks/uala.webp";
import skrill from "../../icons/banks/skrill.webp";
import paypal from "../../icons/banks/paypal.webp";
import payoneer from "../../icons/banks/payoneer.webp";
import mercadopago from "../../icons/banks/mercadopago.webp";
import CardSpotlight from "../CardSpotlight.jsx";
import img1 from "../../icons/calculator.svg";
import img2 from "../../icons/whatsapp.svg";
import img3 from "../../icons/wallet.svg";
---

<Container>
	<article
		class="min-h-screen flex flex-col justify-center text-white mb-20 relative"
		id="price">
		<DolarComponent client:load />
		<div class="flex flex-col justify-center items-center">
			<h1 class="text-3xl md:text-6xl py-5 font-black">
				Servicio en 3 pasos
			</h1>
			<p class="text-center text-lg px-5 max-w-[75ch] text-balance">
				Sigue estos 3 pasos para hacer la transacción de manera segura y
				rápida.
			</p>
		</div>
		<div class="grid grid-col-1 md:grid-cols-3 my-20 gap-5">
			<CardSpotlight
				header="1. Selección de Criptomoneda y Monto"
				main="1 ~ Selecciona la criptomoneda que deseas comprar y el monto que quieres invertir. Te mostraremos la cotización en tiempo real."
				footer="Una vez seleccionada la criptomoneda y el monto, haz clic en 'Continuar' para proceder."
				img={img1.src}
				client:visible
			/>
			<CardSpotlight
				header="2. Confirmación de Datos"
				main="2 ~ Verifica la información proporcionada, asegúrate de que los detalles sean correctos antes de continuar."
				footer="Proporciona tu dirección de billetera para recibir la criptomoneda."
				img={img2.src}
				client:visible
			/>
			<CardSpotlight
				header="3. Confirmación de Transacción"
				main="3 ~ Revisa los detalles de la transacción y confirma para proceder con la compra."
				footer="Una vez confirmada la transacción, recibirás un correo electrónico de confirmación."
				img={img3.src}
				client:visible
			/>
		</div>
	</article>
	<Fader
		img1={wise.src}
		img2={uala.src}
		img3={skrill.src}
		img4={paypal.src}
		img5={payoneer.src}
		img6={mercadopago.src}
		img7={wise.src}
		img8={uala.src}
		img9={skrill.src}
		img10={paypal.src}
	/>
</Container>

<style>
	article {
		background: black;
		padding: 0 3rem;
		border-radius: 3rem;

		animation: fade linear both;
		animation-timeline: scroll(root);
		animation-range: 0 500px;
	}
	@media (width > 800px) {
		@keyframes fade {
			from {
				scale: 0.8;
				transform: translateY(300px);
				opacity: 0.75;
			}
			to {
				scale: 1;
				transform: translateY(0);
				opacity: 1;
			}
		}
	}
</style>
