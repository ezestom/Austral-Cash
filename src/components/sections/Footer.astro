---
import { Image } from "astro:assets";
import logo from "../../img/white_logo.png";
import Container from "../Container.astro";
import instagram from "../../icons/instagram.svg";
import twitter from "../../icons/twitter.svg";
import linkedin from "../../icons/linkedin.svg";
---

<footer>
	<Container>
		<div class="mx-auto w-full p-4 py-6 lg:py-8">
			<div class="md:flex md:justify-between">
				<div class="mb-6 md:mb-0">
					<a href="#top" class="flex items-center">
						<Image
							src={logo}
							class="max-h-8 w-auto"
							alt="AustralCash Logo"
						/>
					</a>
				</div>
				<div class="grid grid-cols-2 gap-8 sm:gap-6 sm:grid-cols-3">
					<div>
						<h2
							class="mb-6 text-base font-semibold text-white uppercase">
							Recursos
						</h2>
						<ul class="text-gray-100">
							<li class="mb-4 text-sm">
								<a
									href="https://www.manteca.dev/"
									target="_blank"
									class="hover:underline">Manteca.dev</a
								>
							</li>
							<li class="text-sm">
								<a
									href="https://dolarapi.com/docs/"
									target="_blank"
									class="hover:underline">DolarApi.com</a
								>
							</li>
						</ul>
					</div>
					<div>
						<h2
							class="mb-6 text-base font-semibold text-white uppercase">
							Seguinos en
						</h2>
						<ul class="text-gray-100">
							<li class="mb-4 text-sm">
								<a
									href="https://www.instagram.com/australcash/"
									target="_blank"
									class="hover:underline">Instagram</a
								>
							</li>
							<li class="text-sm">
								<a
									href="https://www.linkedin.com/in/ezequielstom/"
									target="_blank"
									class="hover:underline">LinkedIn</a
								>
							</li>
						</ul>
					</div>
					<div>
						<h2
							class="mb-6 text-base font-semibold text-white uppercase">
							Legal
						</h2>
						<ul class="text-gray-100">
							<li class="mb-4 text-sm">
								<a href="#" class="hover:underline"
									>Privacidad</a
								>
							</li>
							<li class="text-sm">
								<a href="#" class="hover:underline"
									>Terminos &amp; Condiciones</a
								>
							</li>
						</ul>
					</div>
				</div>
			</div>
			<hr
				class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8"
			/>
			<div class="sm:flex sm:items-center sm:justify-between">
				<span class="text-sm text-gray-100 sm:text-center"
					>Â© 2024 Australcash. Todos los derechos reservados.
				</span>
			</div>
			<div class="flex mt-4 justify-center md:justify-end sm:mt-0 gap-2">
				<a
					href="https://www.instagram.com/australcash/"
					target="_blank"
					class="hover:opacity-50">
					<img src={instagram.src} alt="instagram logo" />
					<span class="sr-only">instagram page</span>
				</a>

				<a
					href="https://www.twitter.com/australcash/"
					target="_blank"
					class="hover:opacity-50">
					<img src={twitter.src} alt="twitter logo" />
					<span class="sr-only">Twitter page</span>
				</a>

				<a
					href="https://www.linkedin.com/in/ezequielstom/"
					target="_blank"
					class="hover:opacity-50">
					<img src={linkedin.src} alt="twitter logo" />
					<span class="sr-only">LinkedIn page</span>
				</a>
			</div>
		</div>
	</Container>
</footer>
